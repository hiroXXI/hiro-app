<%- include('../partials/header') %>

<%- include('../partials/navbar') %>

<div class="container">
<div class="pt-5 px-2 text-center">
  <h1 class="icon-link fw-semibold">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
      <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
    </svg>漫画一覧</h1>
  <form action="/comics" class="d-flex justify-content-center" role="search">
    <input class="form-control me-2 w-50" type="search" name="search" placeholder="サイト内漫画検索" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">🔍</button>
  </form>
</div>

<div class="mt-3 text-center">
  <% if(!comics.length) { %>
    <h2>🔍 漫画が見つかりませんでした</h2>
  <% } else if(search === '') { %>
    <h2>🔍 "キーワード指定なし"</h2>
  <% } else if(search !== undefined){ %>
    <h2>🔍 "<%= search %>"</h2>
  <% } %>
</div>

<div class="mt-5">
  <% for(let comic of comics) { %>
    <% if(comic.words.length) { %>
      <h2 class="text-center">
        <a href="/comics/<%= comic._id %>/words" class="fs-4 btn bg-secondary bg-gradient text-decoration-none text-light shadow p3 mb-5">
          <%= comic.title %></a>
      </h2>
    <% } %>
  <% } %>
  <h5 class="text-center"><a class="btn btn-primary" href="/comics">一覧へ戻る</a></h5>
</div>
</div>

<%- include('../partials/footer') %>
